#!/bin/bash
# ════════════════════════════════════════════════════════════════
#  NorthAfrica Script Encryptor v3.0
#  System Request : Debian 9–13 / Ubuntu 18.04–25+
#  Developer       : Abdul NorthAfrica
#  Telegram        : https://t.me/YourChannelHere
#  Group           : https://t.me/YourGroupHere
# ════════════════════════════════════════════════════════════════

export RED='\033[0;31m'
export GREEN='\033[0;32m'
export YELLOW='\033[0;33m'
export BLUE='\033[0;34m'
export PURPLE='\033[0;35m'
export CYAN='\033[0;36m'
export LIGHT='\033[0;37m'
export NC='\033[0m'

PATH="/usr/bin:$PATH"
x=$(basename "$0")

if [ $# = 0 ]; then
  echo  "          ${PURPLE}━━━━━━━━━━━━━━━━━━━━━━━━━━━━━━━━━━━━━━━━━━━━━━━━━━━━━━━━━━━━${NC}"
  echo  "          ${RED}#----------------------${NC}${GREEN}[MENU  ENCRYPTER]${NC}${RED}--------------------#${NC}"
  echo  "          ${CYAN}━━━━━━━━━━━━━━━━━━━━━━━━━━━━━━━━━━━━━━━━━━━━━━━━━━━━━━━━━━━━${NC}"
  echo  "          ${RED}#${NC}          ${GREEN} USAGE : enc [space] filename.sh${NC}          ${RED}#${NC}"
  echo  "          ${YELLOW}-------------------------------------------------------------${NC}"
  echo  "          ${BLUE}━━━━━━━━━━━━━━━━━━━━━━━━━━━━━━━━━━━━━━━━━━━━━━━━━━━━━━━━━━━━${NC}"
  exit 1
fi

set -C
tmp=gz$$
trap "rm -f $tmp; exit 1" HUP INT QUIT TRAP USR1 PIPE TERM
: > $tmp || exit 1

decomp=0
res=0
test "$x" = "ungzexe" && decomp=1
if [ "x$1" = "x-d" ]; then
  decomp=1
  shift
fi

echo hi > zfoo1$$ || exit 1
echo hi > zfoo2$$ || exit 1
if test -z "$(${CPMOD-cpmod} zfoo1$$ zfoo2$$ 2>&1)"; then
  cpmod=${CPMOD-cpmod}
fi
rm -f zfoo[12]$$

tail=""
IFS="${IFS= 	}"; saveifs="$IFS"; IFS="${IFS}:"
for dir in $PATH; do
  test -z "$dir" && dir=.
  if [ -f "$dir/tail" ]; then
    tail="$dir/tail"
    break
  fi
done
IFS="$saveifs"

if [ -z "$tail" ]; then
  echo "cannot find tail"
  exit 1
fi

case "$(echo foo | $tail -n +1 2>/dev/null)" in
foo) tail="$tail -n";;
esac

for i in "$@"; do
  if [ ! -f "$i" ]; then
    echo "${x}: $i not a file"
    res=1
    continue
  fi

  if [ $decomp -eq 0 ]; then
    if sed -e 1d -e 2q "$i" | grep "^skip=[0-9]*$" >/dev/null; then
      echo "${x}: $i is already encrypted"
      continue
    fi
  fi

  if ls -l "$i" | grep '^...[sS]' > /dev/null; then
    echo "${x}: $i has setuid permission, unchanged"
    continue
  fi

  if ls -l "$i" | grep '^......[sS]' > /dev/null; then
    echo "${x}: $i has setgid permission, unchanged"
    continue
  fi

  case "$(basename "$i")" in
  bzip2 | tail | sed | chmod | ln | sleep | rm)
    echo "${x}: $i would depend on itself"
    continue ;;
  esac

  if [ -z "$cpmod" ]; then
    cp -p "$i" $tmp 2>/dev/null || cp "$i" $tmp
    if [ -w $tmp 2>/dev/null ]; then
      writable=1
    else
      writable=0
      chmod u+w $tmp 2>/dev/null
    fi
    : >| $tmp
  fi

  if [ $decomp -eq 0 ]; then
    sed 1q $0 >> $tmp
    sed "s|^if tail|if $tail|" >> $tmp <<'EOF'
skip=23
set -C
umask=$(umask)
umask 77
tmpfile=$(mktemp /tmp/gztmpXXXXXX) || exit 1
if tail +$skip "$0" | /bin/bzip2 -cd >> $tmpfile; then
  umask $umask
  chmod 700 $tmpfile
  prog=$(basename "$0")
  if ln -T $tmpfile "/tmp/$prog" 2>/dev/null; then
    trap 'rm -f $tmpfile "/tmp/$prog"; exit $res' 0
    (sleep 5; rm -f $tmpfile "/tmp/$prog") 2>/dev/null &
    /tmp/"$prog" "$@"; res=$?
  else
    trap 'rm -f $tmpfile; exit $res' 0
    (sleep 5; rm -f $tmpfile) 2>/dev/null &
    $tmpfile "$@"; res=$?
  fi
else
  echo "Cannot decompress $0"; exit 1
fi; exit $res
EOF

    bzip2 -cv9 "$i" >> $tmp || {
      rm -f $tmp
      echo "${x}: compression not possible for $i, file unchanged."
      res=1
      continue
    }

  else
    skip=23
    if sed -e 1d -e 2q "$i" | grep "^skip=[0-9]*$" >/dev/null; then
      eval "$(sed -e 1d -e 2q "$i")"
    fi
    if tail +$skip "$i" | bzip2 -cd > $tmp; then
      :
    else
      echo "${x}: $i probably not in enc format, file unchanged."
      res=1
      continue
    fi
  fi

  rm -f "$i~"
  mv "$i" "$i~" || {
    echo "${x}: cannot backup $i as $i~"
    rm -f $tmp
    res=1
    continue
  }

  mv $tmp "$i" || cp -p $tmp "$i" 2>/dev/null || cp $tmp "$i" || {
    echo "${x}: cannot create $i"
    rm -f $tmp
    res=1
    continue
  }

  rm -f $tmp
  if [ -n "$cpmod" ]; then
    $cpmod "$i~" "$i" 2>/dev/null
  elif [ $writable -eq 0 ]; then
    chmod u-w $i 2>/dev/null
  fi
done

exit $res