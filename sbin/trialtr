#!/bin/bash
# ━━━━━━━━━━━━━━━━━━━━━━━━━━━━━━━━━━━━━━━━━━━━━━━━━━━━
# System Request : Debian 9 to 13 / Ubuntu 18 to 25
# Developer  » Abdul (NorthAfrica Script)
# Channel    » https://t.me/northafrica9
# Group      » https://t.me/groupnorthafrica
# ━━━━━━━━━━━━━━━━━━━━━━━━━━━━━━━━━━━━━━━━━━━━━━━━━━━━
# North Africa Script

# Colors
RED='\033[0;31m'
NC='\033[0m'
GREEN='\033[0;32m'
CYAN='\033[0;36m'
WHITE='\033[0;37m'

# Telegram Bot Info
CHATID=$(grep -E "^#bot# " "/etc/bot/.bot.db" | cut -d ' ' -f 3)
KEY=$(grep -E "^#bot# " "/etc/bot/.bot.db" | cut -d ' ' -f 2)
export TIME="10"
export URL="https://api.telegram.org/bot$KEY/sendMessage"

clear
echo -e "${GREEN}Loading...${NC}"
sleep 1
clear

# Disable Script Ban System Completely
checking_sc() {
  # Always allow (no bans)
  return 0
}
checking_sc
clear

# Main Data
domain=$(cat /etc/xray/domain)
masaaktif=1
Quota=1
iplimit=10
user=Trial-TR`</dev/urandom tr -dc 0-9 | head -c3`
clear

# HEADER (same style as other menus)
echo -e "${CYAN}━━━━━━━━━━━━━━━━━━━━━━━━━━━━━━━━━━━━━━${NC}"
echo -e "${WHITE}        SET TRIAL EXPIRE (MINUTES)    ${NC}"
echo -e "${CYAN}━━━━━━━━━━━━━━━━━━━━━━━━━━━━━━━━━━━━━━${NC}"
read -p " Minutes : " pup
clear

uuid=$(cat /proc/sys/kernel/random/uuid)
exp=$(date -d "$masaaktif days" +"%Y-%m-%d")

# Insert Trojan WS / gRPC users to XRAY
sed -i '/#trojanws$/a\#! '"$user $exp"'\
},{"password": "'"$uuid"'","email": "'"$user"'"' /etc/xray/config.json

sed -i '/#trojangrpc$/a\#! '"$user $exp"'\
},{"password": "'"$uuid"'","email": "'"$user"'"' /etc/xray/config.json

systemctl restart xray

# Trojan links (WS + gRPC)
trojanlink_ws="trojan://${uuid}@${domain}:443?path=%2Ftrojan-ws&security=tls&host=${domain}&type=ws&sni=${domain}#${user}"
trojanlink_grpc="trojan://${uuid}@${domain}:443?mode=gun&security=tls&type=grpc&serviceName=trojan-grpc&sni=${domain}#${user}"

# Create Clash Format File
cat >/var/www/html/trojan-$user.txt <<-END
━━━━━━━━━━━━━━━━━━━━━
      Clash Format
━━━━━━━━━━━━━━━━━━━━━

# Trojan WS
- name: Trojan-$user-WS
  server: ${domain}
  port: 443
  type: trojan
  password: ${uuid}
  network: ws
  sni: ${domain}
  skip-cert-verify: true
  udp: true
  ws-opts:
    path: /trojan-ws
    headers:
      Host: ${domain}

# Trojan gRPC
- name: Trojan-$user-gRPC
  type: trojan
  server: ${domain}
  port: 443
  password: ${uuid}
  udp: true
  sni: ${domain}
  skip-cert-verify: true
  network: grpc
  grpc-opts:
    grpc-service-name: trojan-grpc

━━━━━━━━━━━━━━━━━━━━━
Trojan Account Links
━━━━━━━━━━━━━━━━━━━━━
WS Link:
${trojanlink_ws}

gRPC Link:
${trojanlink_grpc}
━━━━━━━━━━━━━━━━━━━━━
END

service cron restart

# User Quota System
if [ ! -e /etc/trojan ]; then
  mkdir -p /etc/trojan
fi

if [[ $iplimit -gt 0 ]]; then
  mkdir -p /etc/kyt/limit/trojan/ip
  echo "$iplimit" > /etc/kyt/limit/trojan/ip/$user
fi

if [ -z "${Quota}" ]; then
  Quota="0"
fi

c=$(echo "${Quota}" | sed 's/[^0-9]*//g')
d=$((c * 1024 * 1024 * 1024))

if [[ "$c" != "0" ]]; then
  echo "$d" > /etc/trojan/${user}
fi

sed -i "/\b${user}\b/d" /etc/trojan/.trojan.db
echo "### ${user} ${exp} ${uuid} ${Quota} ${iplimit}" >> /etc/trojan/.trojan.db

# At-job auto delete
echo "tunnel trojan ${user}" | at now +$pup minutes &> /dev/null

# OUTPUT (styled)
clear
echo -e "${CYAN}━━━━━━━━━━━━━━━━━━━━━━━━━━━━━━━━━━━${NC}"
echo -e "${WHITE}          TROJAN TRIAL ACCOUNT      ${NC}"
echo -e "${CYAN}━━━━━━━━━━━━━━━━━━━━━━━━━━━━━━━━━━━${NC}"
echo -e "Username        : ${user}"
echo -e "Domain          : ${domain}"
echo -e "Quota Limit     : ${Quota} GB"
echo -e "IP Limit        : ${iplimit} IP"
echo -e "Port            : 443"
echo -e "Password (UUID) : ${uuid}"
echo -e "WS Path         : /trojan-ws"
echo -e "gRPC Service    : trojan-grpc"
echo -e "${CYAN}━━━━━━━━━━━━━━━━━━━━━━━━━━━━━━━━━━━${NC}"
echo -e "WS Link         : ${trojanlink_ws}"
echo -e "${CYAN}━━━━━━━━━━━━━━━━━━━━━━━━━━━━━━━━━━━${NC}"
echo -e "gRPC Link       : ${trojanlink_grpc}"
echo -e "${CYAN}━━━━━━━━━━━━━━━━━━━━━━━━━━━━━━━━━━━${NC}"
echo -e "Clash Format    : https://${domain}:81/trojan-$user.txt"
echo -e "${CYAN}━━━━━━━━━━━━━━━━━━━━━━━━━━━━━━━━━━━${NC}"
echo -e "Active For      : $pup minutes"
echo -e "${CYAN}━━━━━━━━━━━━━━━━━━━━━━━━━━━━━━━━━━━${NC}"
echo ""

# Back to trial menu
read -n 1 -s -r -p "Press any key to return to menu"
m-trial
