echo -e " ${NC} â”‚$BRED Â» ${bblue}TIME ${YELL}       : ${NC}$TIMEZONE${NC}"
echo -e " ${NC} â”‚$BRED Â» ${bblue}UPTIME ${YELL}     : ${NC}$SERONLINE${NC}"
echo -e " ${NC} â”‚$BRED Â» ${bblue}IP VPS ${YELL}     : ${BRED}$IPVPS${NC}"
echo -e " ${NC} â”‚$BRED Â» ${bblue}DOMAIN ${YELL}     : ${green}$domain${NC}"
echo -e " ${NC} â”—â”â”â”â”â”â”â”â”â”â”â”â”â”â”â”â”â”â”â”â”â”â”â”â”â”â”â”â”â”â”â”â”â”â”â”â”â”â”â”â”â”â”â”â”â”â”â”â”â”â”â”â”â”â”â”â”â”â”â”â”â”â”â”â”â”›$NC"
echo -e " ${NC}                     ${KIRI} ACCOUNT ðŸ§¬INFORMATION ${KANAN}"
echo -e " ${NC}         â”â”â”â”â”â”â”â”â”â”â”â”â”â”â”â”â”â”â”â”â”â”â”â”â”â”â”â”â”â”â”â”â”â”â”â”â”â”â”â”â”â”â”â”â”â”â”â”â”â”${NC}" | lolcat
