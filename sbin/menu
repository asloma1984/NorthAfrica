let vla=$vlx/2
vmc=$(grep -c -E "^### " "/etc/xray/config.json")
let vma=$vmc/2
trx=$(grep -c -E "^#! " "/etc/xray/config.json")
let trb=$trx/2
ssx=$(grep -c -E "^#ss# " "/etc/xray/config.json")
let ssa=$ssx/2

# SSH Users
ssh1=$(awk -F: '$3 >= 1000 && $1 != "nobody" {print $1}' /etc/passwd | wc -l)

a="ACCOUNT PREMIUM"
KANAN="\033[1;32m<\033[1;33m<\033[1;31m<\033[1;31m${NC}"
KIRI="\033[1;32m>\033[1;33m>\033[1;31m>\033[1;31m${NC}"

# â”€â”€â”€â”€â”€â”€â”€â”€â”€â”€â”€â”€â”€â”€â”€â”€â”€â”€â”€â”€â”€â”€â”€â”€â”€â”€â”€â”€â”€â”€â”€â”€â”€â”€â”€â”€â”€â”€â”€â”€â”€â”€â”€â”€â”€â”€â”€â”€
#  FIXCERT FUNCTION : RENEW / INSTALL SSL
# â”€â”€â”€â”€â”€â”€â”€â”€â”€â”€â”€â”€â”€â”€â”€â”€â”€â”€â”€â”€â”€â”€â”€â”€â”€â”€â”€â”€â”€â”€â”€â”€â”€â”€â”€â”€â”€â”€â”€â”€â”€â”€â”€â”€â”€â”€â”€â”€
fixcert() {
    clear
    echo -e "\e[32mRenewing / Installing SSL Certificate...\e[0m"

    # Ensure socat is installed (required for standalone mode)
    apt-get update >/dev/null 2>&1
    apt-get install -y socat >/dev/null 2>&1

    # Load domain from /etc/xray/domain or /root/domain
    domain=$(cat /etc/xray/domain 2>/dev/null || cat /root/domain 2>/dev/null)
    if [[ -z "$domain" ]]; then
        echo -e "\e[31mERROR: No domain found at /etc/xray/domain or /root/domain\e[0m"
        read -p "Press Enter to return..." _
        menu
        return
    fi

    echo -e "Using domain: $domain"
    echo -e "\e[33mStopping services blocking port 80...\e[0m"

    # Kill any process blocking port 80
    STOPWEBSERVER=$(lsof -t -i:80)
    if [[ -n "$STOPWEBSERVER" ]]; then
        kill -9 $STOPWEBSERVER 2>/dev/null || true
    fi

    systemctl stop nginx 2>/dev/null || true
    systemctl stop apache2 2>/dev/null || true
    systemctl stop haproxy 2>/dev/null || true
    systemctl stop cockpit 2>/dev/null || true
    systemctl stop systemd-resolved 2>/dev/null || true

    echo -e "\e[33mPreparing ACME...\e[0m"

    # Reset ACME directory
    rm -rf /root/.acme.sh
    mkdir -p /root/.acme.sh

    # Download latest acme.sh
    curl -s https://acme-install.netlify.app/acme.sh -o /root/.acme.sh/acme.sh
    chmod +x /root/.acme.sh/acme.sh

    # Update acme and set CA
    /root/.acme.sh/acme.sh --upgrade --auto-upgrade >/dev/null 2>&1
    /root/.acme.sh/acme.sh --set-default-ca --server letsencrypt

    echo -e "\e[33mIssuing SSL certificate...\e[0m"

    /root/.acme.sh/acme.sh --issue -d "$domain" --standalone -k ec-256

    echo -e "\e[33mInstalling certificate...\e[0m"

    ~/.acme.sh/acme.sh --installcert -d "$domain" \
        --fullchainpath /etc/xray/xray.crt \
        --keypath /etc/xray/xray.key \
        --ecc

    chmod 600 /etc/xray/xray.key
    chmod 644 /etc/xray/xray.crt

    # Build HAProxy PEM bundle (key + cert) for TLS
    cat /etc/xray/xray.key /etc/xray/xray.crt > /etc/haproxy/hap.pem
    chmod 600 /etc/haproxy/hap.pem

    echo -e "\e[32mSSL Installed Successfully!\e[0m"

    systemctl restart nginx 2>/dev/null || true
    systemctl restart haproxy 2>/dev/null || true
    systemctl restart xray 2>/dev/null || true
    systemctl start systemd-resolved 2>/dev/null || true

    read -p "Press Enter to return..." _
    menu
}

clear
echo -e " "
echo -e " ${NC} â”â”â”â”â”â”â”â”â”â”â”â”â”â”â”â”â”â”â”â”â”â”â”â”â”â”â”â”â”â”â”â”â”â”â”â”â”â”â”â”â”â”â”â”â”â”â”â”â”â”â”â”â”â”â”â”â”â”â”â”â”â”â”â”â”â”“${NC}"
